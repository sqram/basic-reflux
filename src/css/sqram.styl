html, body
  height 100%
  margin 0
  padding 0

body
  background-color #444
  overflow hidden
  font-family 'Noto Sans', sans-serif
  display flex
  justify-content flex-start
  align-items flex-start
  flex-direction column
  background-size 100% 100%


main
  background-color #333
  padding 20px
  text-align left
  width 50%
  align-self center
  //margin-top -300px
  border 3px solid rgba(177, 102, 102, 0.41)
  box-shadow 0 0 0 1px rgba(0,0,0,0.2)

button
  border none
  background-color indianred
  padding 10px 0
  width 20%
  color #fff
  display inline-block
  box-sizing border-box
  float right
  font-size 130%
  &:focus
    outline none

input
  width 77%
  display inline-block
  padding 10px
  box-sizing border-box
  border none
  background aliceblue
  font-size 130%


// where messages are logged/displayed
section
  background aliceblue
  height 200px
  overflow-y auto
  margin-bottom 20px
  padding 10px
  font-size 130%
  & > div > span:first-of-type
    color cadetblue
    display inline-block
    padding 0 10px 0 0
  & > div > span:last-of-type
    color #444


sidebar
  background-color #222
  padding 10px
  width 100%
  color darkcyan
  margin-bottom 90px
  border-bottom 1px solid #000
  span
    display inline-block
    background-color coral
    color #222
    font-weight bold
    vertical-align middle
    width 30px
    height 30px
    border-radius 20px
    text-align center
    line-height 30px
    margin 0 6px


&:focus
    outline none

